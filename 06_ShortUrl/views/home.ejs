<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Home Page</title>
    <style>
      body {
        font-size: Tahoma;
        position: relative;
        padding-top: 50px;
      }
      .box {
        position: absolute;
        left: 50%;
        transform: translateX(-50%);
      }
      .box2 {
        margin-top: 40px;
        max-height: 500px;
        overflow-y: scroll;
      }
      td,
      th {
        padding: 8px 20px;
      }
    </style>
  </head>
  <body>
    <div class="box">
      <h1 style="text-align: center">URL SHORTNER</h1>
      <div>
        <form method="POST" action="/url">
          <label for="">Enter Your Orginal Url : </label>
          <input name="url" type="text" placeholder="https://example.com" />
          <button type="submit">Generate</button>
        </form>
      </div>
      <% if (locals.id) { %>
      <p>URL Generated : http://localhost:8001/<%=id %></p>
      <% } %>

      <div class="box2">
        <% if (locals.urls) { %>
        <table>
          <thead>
            <th>S.No</th>
            <th>ShortId</th>
            <th>RedirectUrl</th>
            <th>Clicks</th>
          </thead>
          <tbody>
            <% urls.forEach((url,index) => { %>
            <tr>
              <td><%= index+1 %></td>
              <td><%= url.shortId %></td>
              <td><%= url.redirectUrl %></td>
              <td><%= url.visitHistory.length %></td>
            </tr>
            <% }) %>
          </tbody>
        </table>
        <% } %>
      </div>
    </div>

    <script>
      // If URL contains ?id=..., remove it after the first load
      if (window.location.search.includes("id=")) {
        window.history.replaceState({}, document.title, "/home");
      }
    </script>
  </body>
</html>
